{
  "Logging": {
    "PathFormat": "Logs/log-{Date}.txt",
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "HostConfiguration": {
    "Environment": "Staging",
    "StartupErrors": true
  },
  "WebSettings": {
    "AppVersion": "1.0",
    "EnvironmentName": "undifined",
    "ShowErrors": true,
    "EnableCSRF": true,
    "IdleTimeout": 60, //minutes
    "SessionExpiration": "3.0:0:0",
    "DateFormat": "yyyy-MM-dd",
    "LogDBMessages": true,
    "LogWarningMaxDBRows": 50,
    "MaxDBRowsException": 80,
    "MaxSessionErrors": null, //null == unlimited
    "CSRFSettings": {
      "Enabled": true,
      "IncludedEndpoints": [
        {
          "StartingRequestPath": "/api/"
        }
      ],
      "ExcludedEndpoints": [
        {
          "StartingRequestPath": "/api/v1/Reports/Signature/"
        },
        {
          "Methods": [ "GET" ],
          "StartingRequestPath": "/home/"
        }
      ]
    }
  },
  "Roles": {
    "ReadOnly": [ "Group1" ],
    "Modify": [ "Group2", "Group3" ],
    "Admin": [ "Group3" ]
  }
}
